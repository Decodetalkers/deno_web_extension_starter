{
  "manifest_version": 2,
  "name": "Browser Extension",
  "description": "A browser Extension",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "static/options.html",
  "options_ui": {
    "page": "static/options.html",
    "open_in_tab": true,
    "browser_style": false
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "icons": {
    "32": "static/icons/32.png",
    "48": "static/icons/48.png",
    "64": "static/icons/64.png",
    "128": "static/icons/128.png",
    "256": "static/icons/256.png"
  },
  "applications": {
    "gecko": {
      "id": "browser-extension@bpev.me"
    }
  }
}
